#include <stdio.h>
#include <stdlib.h>

#define MAX 100

struct Process {
    int pid;
    int arrival;
    int burst;
    int remaining;
    int priority;
    int completion;
    int waiting;
    int turnaround;
    int response;
    int started;
};

struct Process p[MAX], temp[MAX];
int n;

void input();
void copyProcesses();
void calculateMetrics();
void printResult(char *title);
void fcfs();
void sjf();
void roundRobin(int quantum);
void priorityScheduling();

int main() {
    int quantum;

    input();

    fcfs();
    sjf();

    printf("\nEnter Time Quantum for Round Robin: ");
    scanf("%d", &quantum);
    roundRobin(quantum);

    priorityScheduling();

    return 0;
}

void input() {
    printf("Enter number of processes: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("\nProcess %d\n", p[i].pid);
        printf("Arrival Time: ");
        scanf("%d", &p[i].arrival);
        printf("Burst Time: ");
        scanf("%d", &p[i].burst);
        printf("Priority: ");
        scanf("%d", &p[i].priority);

        p[i].remaining = p[i].burst;
        p[i].started = 0;
    }
}

void copyProcesses() {
    for (int i = 0; i < n; i++)
        temp[i] = p[i];
}

void calculateMetrics() {
    for (int i = 0; i < n; i++) {
        temp[i].turnaround = temp[i].completion - temp[i].arrival;
        temp[i].waiting = temp[i].turnaround - temp[i].burst;
    }
}

void printResult(char *title) {
    float avgWT = 0, avgTAT = 0;

    printf("\n===== %s =====\n", title);
    printf("PID\tAT\tBT\tCT\tTAT\tWT\tRT\n");

    for (int i = 0; i < n; i++) {
        avgWT += temp[i].waiting;
        avgTAT += temp[i].turnaround;

        printf("%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
               temp[i].pid,
               temp[i].arrival,
               temp[i].burst,
               temp[i].completion,
               temp[i].turnaround,
               temp[i].waiting,
               temp[i].response);
    }

    printf("Average Waiting Time: %.2f\n", avgWT / n);
    printf("Average Turnaround Time: %.2f\n", avgTAT / n);
}

void fcfs() {
    copyProcesses();
    int time = 0;

    for (int i = 0; i < n; i++) {
        if (time < temp[i].arrival)
            time = temp[i].arrival;

        temp[i].response = time - temp[i].arrival;
        time += temp[i].burst;
        temp[i].completion = time;
    }

    calculateMetrics();
    printResult("FCFS");
}

